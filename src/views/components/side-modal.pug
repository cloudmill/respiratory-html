mixin side-modal(props = {})
  .side-modal(data-side-modal=props.id)
    .side-modal__overlay(data-side-modal-overlay)
    .side-modal__content

      button.side-modal__close(data-side-modal-close)
        +close-cross-svg

      case props.id
        when 'case-1'
          +container(['side-modal'])
            +space(['padding'], ['pt'])
            +hr
            +space(['hr'])
            +heading(['sub'], 2)
              |Кейс
            +space(['sub-block'])
            +wrap-list
              -
                var items = [
                  'Поставка продукции',
                  'Обучение службы охраны труда',
                  'Обучение персонала',
                ];
              each item in items
                li.wrap-list__item
                  +tab(['small'], true)
                    |#{item}
            +space(['block'])
            +container(['case'])
              +heading(['case'], 3)
                |АО&nbsp;&laquo;Оскольский электрометаллургический комбинат&raquo;
