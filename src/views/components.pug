//- grid

mixin grid(mods = [])
  .grid(class=mods.map(mod => `grid--${mod}`))
    block

//- heading

mixin heading(h = 2, mods = [])
  - var className = 'heading';
  - var classes = getClassesFromMods(className, mods);
  case h
    when 1
      h1.heading(class=classes)
        block
    when 2
      h2.heading(class=classes)
        block
    when 3
      h3.heading(class=classes)
        block
    when 4
      h4.heading(class=classes)
        block
    when 5
      h5.heading(class=classes)
        block
    when 6
      h6.heading(class=classes)
        block

