mixin header-link(props = {})
  .header__link(class=(props.large && 'header__link--large'))
    a.header__link-link(href="#")
      block

mixin header
  header.header
    .wrapper
      .header__top
        .container
          .header__container
            .header__row
              .header__row-item
                .header__grid.header__grid--right
                  .header__grid-item
                    -
                      var items = [
                        'en',
                        'Fr',
                        'Kaz',
                        'JP',
                        'UZ',
                      ];
                    +drop(items).drop--small
                      |RU
                  .header__grid-item
                    +header-link
                      |О компании
              .header__row-item
                +header-link
                  |Контроль качества
              .header__row-item
                .header__triple
                  -
                    var items = [
                      'Работа у нас',
                      'Документация',
                      'Медиа-центр',
                    ];
                  each item in items
                    .header__triple-item
                      +header-link= item
              .header__row-item
                .header__grid.header__grid--left
                  .header__grid-item
                    +header-link
                      |Где купить
                  .header__grid-item
                    +header-link
                      |Контакты
      .header__bottom
        .container
          .header__container
            .header__row
              .header__row-item
                .header__logo
                  a.header__logo-link(href="#")
                    +logo-svg.header__logo-svg
              .header__row-item
                +press.press--white
                  |оформить заказ
              .header__row-item
                .header__triple
                  .header__triple-item
                    -
                      var items = [
                        'Промышленным предприятиям',
                        'Медицинским учреждениям',
                        'Торговым организациям',
                      ];
                    +drop(items)
                      |Партнерам
                  .header__triple-item
                    +header-link({ large: true })
                      |Потребителям
                  .header__triple-item
                    .header__search
                      +search-svg.header__search-svg
              .header__row-item
                .header__last
                  +press.press--white
                    |оформить заказ
