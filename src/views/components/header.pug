mixin header-link(props = {})
  .header__link(class=(props.large && 'header__link--large'))
    a.header__link-link(href="#")
      block

//- 
  props
    mods? []

mixin header(props = {})
  - var classes = getClassesFromMods('header', props.mods);

  header.header(class=classes)
    .header__desktop
      .wrapper
        .header__top
          +container
            .header__container.header__container--top
              .header__row.header__row--align-baseline
                .header__row-item
                  .header__grid.header__grid--right.header__grid--align-baseline
                    .header__grid-item
                      -
                        var items = [
                          'en',
                          'Fr',
                          'Kaz',
                          'JP',
                          'UZ',
                        ];
                      +drop(items)(class=(classes.length ? 'drop--yellow' : '')).drop--small
                        |RU
                    .header__grid-item
                      +header-link
                        |О компании
                .header__row-item
                  +header-link
                    |Контроль качества
                .header__row-item
                  .header__triple
                    -
                      var items = [
                        'Работа у нас',
                        'Документация',
                        'Медиа-центр',
                      ];
                    each item in items
                      .header__triple-item
                        +header-link= item
                .header__row-item
                  .header__grid.header__grid--left
                    .header__grid-item
                      +header-link
                        |Где купить
                    .header__grid-item
                      +header-link
                        |Контакты
        .header__bottom
          +container
            .header__container
              .header__row.header__row--align-center
                .header__row-item
                  .header__logo
                    a.header__logo-link(href="#")
                      +logo-svg.header__logo-svg
                .header__row-item(data-header-button='products')
                  +press({ icon: ['menu-start.svg', 'menu-end.svg', 'left'] }).press--menu
                    |Продукция
                .header__row-item.header__row-item--align-transform
                  .header__triple.header__triple--align-baseline
                    .header__triple-item
                      -
                        var items = [
                          'Промышленным предприятиям',
                          'Медицинским учреждениям',
                          'Торговым организациям',
                        ];
                      +drop(items)(class=(classes.length ? 'drop--yellow' : ''))
                        |Партнерам
                    .header__triple-item
                      +header-link({ large: true })
                        |Потребителям
                    .header__triple-item
                      .header__search.header__search--align-transform(data-header-button='search')
                        +search-svg.header__search-svg
                .header__row-item
                  .header__last
                    +press.press--white
                      |оформить заказ
    .header__mobile 
      .wrapper 
        +container
          .header__container
            .header__row
              .header__col
                .header__logo
                  a.header__logo-link(href="#")
                    +logo-svg.header__logo-svg
              .header__col
                .header__button 
                  +press.press--white
                    |оформить заказ
                .header__buttons 
                  .header__buttons-item 
                    .header__search(data-header-button='search')
                      +search-svg.header__search-svg
                  .header__buttons-item
                    .header__burger(data-menu-button='')
        +mobile-menu
    .header__modals(data-header-modals='')
      .header__overlay(data-header-overlay='')
      +search-modal 
      +product-modal