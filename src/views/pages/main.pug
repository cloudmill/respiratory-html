extends ../app

block definitions
  -
    app.title = 'Главная';

block header
  +header({ mods: ['transparent'] })
block footer
  .isolation
    .gap.gap--section
      +footer

//- block preloader

block grid-test

block js-test

block content
  +top
  .isolation
    .gap.gap--section
      +container
        .separator.separator--section
        .row.row--section
          .row__col
            h2.title.title--section
              |Не просто производим
          .row__col
            p.article-2
              |Помогаем выстраивать процессы и развивать культуру профессионального использования 
              a.article-2__link(href="#")
                |СИЗОД
  .isolation
    .gap.gap--section
      +container
        .separator.separator--section
        h2.title.title--section
          |Условия сотрудничества
        .cards.cards--margin
          -
            var items = [
              'Промышленным предприятиям',
              'Медицинским учреждениям',
              'Торговым организациям',
            ]
          each item, index in items
            .cards__item
              a.card(href="#")
                .card__container
                  .card__label
                    +arrow-tilt-svg.card__label-svg
                  img.card__background(src=`assets/images/card-${index + 1}.jpg`)
                  img.card__background-mobile(src=`assets/images/card-${index + 1}-mobile.jpg`)
                h3.card__title(class=(index > 0 ? 'card__title--dark' : ''))
                  |#{item}
  .isolation
    .gap.gap--section
      +series
  .isolation
    .gap.gap--section
      section.info
        .info__container
          img.info__image(src="assets/images/info.jpg", alt="")
          h2.info__top
            .info__title
              |Используйте респиратор
            .info__row
              .info__col
                .info__title
                  |для защиты
              .info__col
                .info__avatar
                  img.info__img(src="assets/images/avatar.jpg")
            .info__title
              |органов дыхания
        +container
          .info__bottom
            .info__article
              |На пыльных производствах, при взаимодействии с лакокрасочными составами и химическими растворами,или в очаге распространения опасных инфекций
            +press.press--info.info__button-link
              |Информация для потребителей
  
  .isolation
    .gap.gap--section
      +slider
