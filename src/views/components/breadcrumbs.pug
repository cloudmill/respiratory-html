mixin breadcrumb(props = {})
  - var classes = getClassesFromMods('breadcrumb', props.mods)

  .breadcrumb-wrapper
    if (props.isLink)
      a.breadcrumb(class=classes href="#")
        block
    else
      .breadcrumb(class=classes)
        block


