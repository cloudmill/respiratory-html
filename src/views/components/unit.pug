mixin unit(props = {})
  a.product.product--border-none.product--unit(href="#")
    .product__grid
      .product__cell
        img.product__img(src=`assets/images/unit/unit.jpeg` alt='')
      .product__cell.product__cell--inf
        h2.product__title
          |RK 9010
        .product__table
          .product__table-row.product__table-title
            .product__table-col
              |Класс защиты
            .product__table-col
              |Клапан выдоха
          .product__table-row.product__table-value
            .product__table-col
              |FFP1 R D
            .product__table-col
              |Нет

        .product__features.only-desktop
          .product__feature
            img.product__feature-svg(src="assets/images/feature.svg" alt='')
            .product__feature-text
              |Защита от всех видов аэрозолей

      .product__mark
        +arrow-tilt-svg.product__svg

    .product__features.only-mobile
      .product__feature
        img.product__feature-svg(src="assets/images/feature.svg" alt='')
        .product__feature-text
          |Защита от всех видов аэрозолей
  a.unit-mobile(href='#' data-unit data-unit-inactive data-side-modal-trigger=props.sideModalId)
    +grid(['unit-mobile'])
      .grid__item
        .unit-mobile__image
          img.unit-mobile__img(src='assets/images/unit/unit.jpeg' alt='')
      .grid__item
        .unit-mobile__content
          .unit-mobile__mark
            +arrow-tilt-svg.unit-mobile__svg
          .unit-mobile__content-top
            +heading(['unit-mobile'])
              |RK 9000
            .unit-mobile__list
              +stack(['unit-mobile'])
                .stack__item
                  .unit-mobile__prop
                    .unit-mobile__prop-name
                      |Класс защиты
                    .unit-mobile__prop-value
                      |FFP1 NR D
                .stack__item
                  .unit-mobile__prop
                    .unit-mobile__prop-name
                      |Клапан выдоха
                    .unit-mobile__prop-value
                      |Есть
          .unit-mobile__content-bottom
            +press.press--unit
              |о защите
