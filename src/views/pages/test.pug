extends ../app

block definitions
  -
    app.title = 'Тестовая';

block header
block footer

block preloader

//- block grid-test

mixin slide(props)
  .slide(class=(props.large && 'slide--large') class=(props.small && 'slide--small'))&attributes(attributes)
    .slide__top
      |top
    .slide__bottom
      .slide__panel
        |panel
      .slide__text
        .mask-text.mask-text--active
          each word, index in ("Пневмокониоз как результат воздействия производственной пыли на органы дыхания работников").split(" ")
            .mask-text__mask
              .mask-text__word
                .mask-text__text(class=(props.large && 'mask-text__text--slider--large') class=(props.small && 'mask-text__text--slider--small'))
                  |!{word + '&nbsp;'}

mixin slider
  .slider
    .slider__col
      +slide({ large: true })
    each i in repeat(2)
      .slider__col
        +slide({ small: true })

block content
  //- +topn
  .container
    .border
      .slider-panel
        .slider-panel__place
          h2.sub-title
            |Медиа-центр
        .slider-panel__place.slider-panel__place--slider
          +slider
        .slider-panel__place.slider-panel__place--bottom
          .controls.slider-panel__controls
            .controls__item
              button.circle__button(type="button")
                +arrow-left-svg.circle__svg.circle__svg--arrow-left
            .controls__item
              button.circle__button(type="button")
                +arrow-left-svg.circle__svg.circle__svg--invert.circle__svg--arrow-left
          |btn
