  props
    items []
    breadcrumbMods? []

mixin breadcrumbs(props = {})

  - var breadcrumbMods = props.breadcrumbMods || [];
  .breadcrumbs
    each item, index in props.items
      .breadcrumbs__item
        +breadcrumb({ mods: breadcrumbMods.concat([checkLastIndex(index, props.items) && 'active']), isLink: !checkLastIndex(index, props.items) })= item
