extends ../app

block definitions
  -
    app.title = 'Промышленным предприятиям';

block header
  +header({ mods: ['transparent'] })

block modal
  include ../components/form-response-modal

block content
  +first('assets/images/industrial-enterprises.jpeg')
    .top-bottom
      .top-bottom__item
        +container
          +breadcrumbs(['Главная', 'Промышленным предприятиям'], ['transparent'])
      .top-bottom__item
        +container
          h1.super-title
            |Промышленным предприятиям
  .second-wrapper
    +second-2
  +container
    +grid([3])
      -
        var items = [
          {
            src: getImageSrc('items-1.svg'),
            text: 'Собственный научный центр, конструкторское бюро, лаборатории, склады',
          },
          {
            src: getImageSrc('items-2.svg'),
            text: 'Производственная мощность достигает 100 миллионов респираторов в&nbsp;год',
          },
          {
            src: getImageSrc('items-3.svg'),
            text: 'Налаженные цепочки поставок сырья и&nbsp;комплектующих. Опытный логистический дивизион',
          },
        ];
      each item in items
        .grid__item
          +feature(item)
  +space(['section'])
  +reslider('industrial')
  +container.section-margin
    .border
      h2.sub-title
        |Клиентский сервис
      .info-blocks.mid-section-margin
        .info-blocks__item
          .info-block
            .info-block__col
              .info-block__feature
                .article
                  span.article__highlight
                    |Измеряем эффективность СИЗ
                  |#{" "}органов дыхания на рабочих местах сотрудников
            .info-block__col
              .info-block__text
                |Измерять соответствие используемых СИЗОД реальным рабочим условиям – способ актуализировать уровень защиты, оптимизировать затраты и повысить лояльность персонала, который видит заботу и контроль.
        .info-blocks__item
          .info-block
            .info-block__col
              .info-block__feature
                .article
                  |Проводим совместные #[span.article__highlight мотивационные #[br] и обучающие] мероприятия
            .info-block__col
              .info-block__text
                |Обучающие модули дадут всестороннее представление о противоаэрозольной защите и аспектах выстраивания системы эффективного применения респираторов.
              .info-block__text
                |Участвуя в программе обучения, предприятия демонстрируют практику непрерывного повышения уровня безопасности труда, выполняя требования ISO 45001.
  +container.section-margin
    .border
      h2.sub-title
        |Информационные материалы
      .information-block.small-margin
        .information-block__col
          a.information-card(href="#")
            .information-card__image
              +picture('information-card.jpeg').information-card__picture
              .control.information-card__download
                +download-svg.control__svg
            h3.information-card__title
              |Каталог компании
            p.information-card__size
              |235 КБ
        .information-block__col
          a.information-card(href="#")
            .information-card__image
              +picture('information-card-2.jpeg').information-card__picture
              .control.information-card__download
                +download-svg.control__svg
            h3.information-card__title
              |Листовка о клиентском сервисе
            p.information-card__size
              |235 КБ
        .information-block__col
          a.information-card(href="#")
            .information-card__image
              +picture('information-card-3.jpeg').information-card__picture
              .control.information-card__download
                +download-svg.control__svg
            h3.information-card__title
              |Плакат по надеванию респиратора
            p.information-card__size
              |235 КБ
  .section-margin(data-examples-slider-component)
    +container
      .border
        .slider-panel
          .slider-panel__col
            h2.sub-title
              |Наиболее востребованные модели продукции
          .slider-panel__col
            .slider-panel__sub-col
              .controls.slider-panel__controls
                .controls__item
                  .circle
                    button.circle__button.js-slider-prev(type="button" data-swiper-slider-prev='unit')
                      +arrow-left-svg.circle__svg.circle__svg--arrow-left
                .controls__item
                  .circle
                    button.circle__button.js-slider-next(type="button" data-swiper-slider-next='unit')
                      +arrow-left-svg.circle__svg.circle__svg--invert.circle__svg--arrow-left
            .slider-panel__sub-col
              +press.press--info
                |Перейти в каталог
    +space(['block'])
    +container(['unit'])
      .swiper.swiper-slider(data-swiper-slider='unit')
        .swiper-wrapper
          each i, index in repeat(3)
            .swiper-slide
              +unit
    +container 
      .slider-btn 
        +press.press--info
          |Перейти в каталог
  section.form-section
    .form-section__content
      .form-section__content-item
        .form-section__title-container
          h2.sub-title.form-section__title
            |связаться с нами
      .form-section__content-item
        .form-section__article-container
          .article.article--large.article--indent
            span.article__highlight
              |Сделать запрос
            |#{" "}на коммерческое предложение
      .form-section__content-item
        form.section-form(data-parsley-validate)
          .section-form__grid
            .section-form__item
              .form-field.form-field--error
                input.form-field__input(placeholder='Имя' required)
                
            .section-form__item
              .form-field
                input.form-field__input(placeholder='Название компании' required)
                
            .section-form__item
              .form-field
                input.form-field__input(placeholder='Телефон' required)
                
            .section-form__item
              .form-field
                input.form-field__input(placeholder='E-mail' required)
                
            .section-form__item.section-form__item--row
              .form-field.form-field--textarea.form-field--error
                textarea.form-field__input(placeholder='Сообщение' required)
            
            .section-form__item 
              label.btn-file
                input(type='file')

                span
                  +clip-svg
                  |прикрепить файл
            
            .section-form__item.section-form__item--right.section-form__bottom
              .section-form__agrement
                .simple-checkbox.simple-checkbox--error
                  label.simple-checkbox__label
                    input.simple-checkbox__input(name='agreement' type='checkbox' id='checkbox' required)
                    .simple-checkbox__box
                      +check-svg.simple-checkbox__svg
                    .simple-checkbox__content
                      |Даю согласие на обработку 
                      a.simple-checkbox__link(href="#")
                        |персональных данных
                    
              button.section-form__submit(type='submit')
                +press.press--info
                  |Отправить
                  