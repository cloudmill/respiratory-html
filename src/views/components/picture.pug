mixin picture(fileName)
  -
    var fileTitle = file.getTitle(fileName);
    var fileExtension = file.getExtension(fileName);

  picture.picture(class=attributes.class)
    source(
      type="image/webp"
      srcset=(file.getPath(fileTitle, "webp") + " 1x, " + file.getPath(fileTitle + "_2x", "webp") + " 2x")
    )
    img.picture__img(
      src=(file.getPath(fileTitle, fileExtension))
      srcset=(file.getPath(fileTitle + "_2x", fileExtension) + " 2x")
    )
